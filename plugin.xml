<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="toys.wondex.cordova.chromecast" version="0.1">
    <name>Wondex Cordova ChromeCast</name>
    <description>Wondex Cordova ChromeCast</description>
    <keywords>cordova,chromecast</keywords>
    <js-module src="chromecast.js" name="Chromecast">
        <clobbers target="chromecast" />
    </js-module>
    <platform name="ios">
        <config-file target="config.xml" parent="/*/plugins">
            <plugin name="Echo" value="Echo" onload="true" />
        </config-file>

        <config-file target="config.xml" parent="/widget">
            <feature name="Echo">
                <param name="ios-package" value="Echo"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/Echo.h" />

        <source-file src="src/ios/Echo.m" />
    </platform>
</plugin>